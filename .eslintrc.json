{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "google"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "camelcase": "off",
        "max-len": "off",
        "indent": "off",
        "key-spacing": "off",
        "no-multi-spaces": "off",
        "spaced-comment": ["error", "always", { "block": { "markers": ["!"], "exceptions": ["*"] }}],
        "no-unused-vars": ["error", { "varsIgnorePattern": "^onmessage$|AsString$|^debugLog$|^debugAssert$|^getIPv6CompressedAddrWithPrefixLength$" }]
    }
}
